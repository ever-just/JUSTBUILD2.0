{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash scripts/railway-build.sh",
    "watchPatterns": [
      "apps/open-swe/**",
      "packages/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "yarn workspace @open-swe/agent dev",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/api/agent/ok",
    "healthcheckTimeout": 30,
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "build": {
        "buildCommand": "bash scripts/railway-build.sh"
      }
    }
  }
}
