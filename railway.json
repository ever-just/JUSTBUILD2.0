{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install && yarn workspace @open-swe/agent build",
    "watchPatterns": [
      "apps/open-swe/**",
      "packages/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "yarn workspace @open-swe/agent dev",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/api/agent/ok",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "build": {
        "buildCommand": "NODE_ENV=production yarn install --frozen-lockfile && yarn workspace @open-swe/agent build"
      }
    }
  }
}
